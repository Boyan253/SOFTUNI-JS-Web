{{#with auction}}
            <!-- In case of error, display the following div--><!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->
            
            <!-- Details Page - Auction owner -->
            <section id="catalog-section">

                <h1 class="item">
                    {{title}}
                    <div class="f-right">
                        <a  href="/edit/{{_id}}"class="action pad-small f-left">Edit</a>
                        <a href="/delete/{{_id}}" class="action pad-small f-left" >Delete</a>
                    </div>
                </h1>
                <div class="item padded">

                    <div class="layout right large">
                        
                        <div class="col">
                            <img src="{{image}}" class="img-large">
                        </div>

                        <div class="content pad-med">

                            <p>In category: <strong>{{category}}</strong></p>
                            <p>{{description}}</p>

                            <div class="align-center">
                                <div>
                                    Current price: $<strong>{{price}}</strong>
                                </div>
{{#each bidder}}
                                <div>
                                    <!-- If there is a bidder -->
                                    
                                    Bid by <strong>{{email}}</strong>

                                    <!-- # Bonus: If there is a bidder -->

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    

                                    <!-- If there are no bids -->
                                </div>
                                    {{else}}
                                   <p>No bids</p> 
                                {{/each}}
                            </div>

                        </div>
                    </div>

                    <footer>Listed by {{author.email}}</footer>
                </div>

            </section>
{{/with}}
        