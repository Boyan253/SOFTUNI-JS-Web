
            <section id="register-section" class="narrow">

                <h1 class="item">Register</h1>

                <div class="item padded align-center">

                    <form class="aligned" method="post" action="/register">

                        <label>
                            <span>Email</span>
                            <input type="text" name="email">
                        </label>
                        <label>
                            <span>First name</span>
                            <input type="text" name="firstname">
                        </label>
                        <label>
                            <span>Last name</span>
