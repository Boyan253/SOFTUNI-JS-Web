
            <h1>Attach a new accessory</h1>
            <div class="form">
                <h2>{{car.name}}</h2>
                <img class="cube" src="{{car.imageUrl}}">
                {{#if accessories}}
                <form action="/attach/{{car.id}}" method="POST">
                    <label for="accessory">Accessory</label>
                    <select id="accessory" name="accessory" />
                    {{#each accessories}}
                    <option value="{{id}}">{{name}}</option>
                    
                    {{/each}}
                    </select>
                    <input type="submit" value="Attach">
                </form>
                {{else}}
                <h3 class="italic">This cube has all available accessories so far or there is no available at all...
                </h3>
                {{/if}}
                <a class="btn" href="/details/{{car.id}}">Back</a>
            </div>
       